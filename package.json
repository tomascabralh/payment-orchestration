{
  "name": "payment-orchestration",
  "version": "1.0.0",
  "description": "```sh npm create astro@latest -- --template minimal ```",
  "main": "index.js",
  "scripts": {
    "generate": "npx prisma generate --schema=src/adapters/prisma/schema.prisma",
    "migrate": "npx prisma migrate dev --schema=src/adapters/prisma/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:react": "cd src/interfaces/astro && jest",
    "test:react:watch": "cd src/interfaces/astro && jest --watch",
    "test:react:coverage": "cd src/interfaces/astro && jest --coverage",
    "test:all": "npm run test && npm run test:react",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:component": "cypress run --component",
    "test:e2e": "start-server-and-test 'cd src/interfaces/astro && npm run dev' http://localhost:4321 'cypress run'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.9.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "cypress": "^13.6.6",
    "jest": "^29.7.0",
    "start-server-and-test": "^2.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  }
}
